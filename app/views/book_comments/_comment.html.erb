<div>
   <!--コメント一覧-->
   <% book.book_comments.each do |book_comment| %>
  <p><%= image_tag("no-image-icon.jpg") %></p>
  <%= link_to book_comment.user.name, user_path(book_comment.user_id) %>
 <%= book_comment.comment %>
   <% if book_comment.user == current_user %>

    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: 'btn btn-danger', method: :delete, remote:true %>
  <% end %>

<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[book, book_comment]) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>

</div>